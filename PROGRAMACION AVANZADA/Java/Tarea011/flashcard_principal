
public class flashcard_principal {
    public static void main(String[] args) {
        // Crear el modelo
        flashcard_modelo modelo = new flashcard_modelo();
        
        // Crear la vista
        flashcard_vista vista = new flashcard_vista();
        
        // Crear el controlador, conectando el modelo y la vista
        flashcard_controlador controlador = new flashcard_controlador(vista, modelo);
        
        // Mostrar la ventana
        vista.setVisible(true);
    }
}
